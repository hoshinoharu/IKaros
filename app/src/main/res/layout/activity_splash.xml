<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39AEC2">

    <ImageView
        android:id="@+id/iv_buildings"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/buildings" />

    <ImageView
        android:id="@+id/iv_sun"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:src="@mipmap/sun"
        android:layout_above="@+id/iv_clouds_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_na"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/na_head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <ImageView
        android:id="@+id/iv_clouds_left"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="83dp"
        android:src="@mipmap/clouds_left"
        android:layout_above="@+id/iv_buildings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_clouds_center"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/clouds_center"
        android:layout_below="@+id/iv_sun"
        android:layout_alignLeft="@+id/iv_clouds_center_clone"
        android:layout_alignStart="@+id/iv_clouds_center_clone" />

    <ImageView
        android:id="@+id/iv_clouds_right"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@mipmap/clouds_right"
        android:layout_alignTop="@+id/clouds_right_clone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/clouds_left_clone"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@mipmap/clouds_left"
        android:layout_below="@+id/iv_sun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_clouds_center_clone"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:src="@mipmap/clouds_center"
        android:layout_alignTop="@+id/iv_clouds_center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_clouds_center_clone_2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:src="@mipmap/clouds_center"
        android:layout_alignTop="@+id/iv_clouds_center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_clouds_center_clone_3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:src="@mipmap/clouds_center"
        android:layout_alignTop="@+id/iv_clouds_center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/clouds_right_clone"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@mipmap/clouds_right"
        android:layout_alignTop="@+id/iv_clouds_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
