<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator android:duration="500" android:propertyXName="scale" android:propertyYName="scale" android:valueFrom="1" android:valueTo="1.2" android:valueType="floatType" />
    </item>
    <item android:state_pressed="false">
        <objectAnimator android:duration="500" android:propertyXName="scale" android:propertyYName="scale" android:valueFrom="1.2" android:valueTo="1" android:valueType="floatType" />
    </item>
</selector>